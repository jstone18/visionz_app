<div class="errors">
  <%= render 'errors' %>
</div>

<%= form_for(@post) do |f| %>

    <div class="field">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title %>
    </div>

    <%= f.hidden_field :user_id %>

    <div class="field">
      <%= f.label :link, class: "form-label" %>
      <%= f.text_field :link %>
    </div>

    <div class="field">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :image, class: "form-label" %>
      <%= f.file_field :image %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary form-label" %>
    </div

<% end %>
