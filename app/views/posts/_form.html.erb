<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title %>
    </div>

    <%= f.hidden_field :user_id %>

    <div class="field">
      <%= f.label :link, class: "form-label" %>
      <%= f.text_field :link %>
    </div>

    <div class="field">
      <%= f.label :description, class: "form-label" %><br>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :image, class: "form-label" %><br>
      <%= f.file_field :image %>
    </div><br>

    <div class="">
      <%= f.submit "Submit", class: "btn btn-primary " %>
    </div

<% end %>
