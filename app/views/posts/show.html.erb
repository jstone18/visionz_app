<%= image_tag @post.image.url(:medium) %>
<h2 class=""><%= @post.title %></h2>

<p><%= @post.link %></p>
<p><%= @post.description %></p>
<p><%= @post.user.name %></p>

<p><%= @post.get_upvotes.size %> Likes</p>
<p><%= @post.get_downvotes.size %> Dislikes</p>
<p><%= link_to "Like", like_post_path(@post), method: :get %></p>
<p><%= link_to "Dislike", dislike_post_path(@post), method: :get %></p>

<h2><%= pluralize(@post.comments.count, "Comment") %></h2>
  <% @comments.each do |comment| %>
    <p>Username: <%= comment.user.name %></p>
    <p><%= comment.content %></p>
  <% end %>

<%= render 'comments/form' %>

<%= link_to "Edit", edit_post_path(@post) %><br>
<%= link_to "Delete", @post, method: :delete, data: { confirm: 'Are you sure?' } %><br>
<%= link_to "All Inspirations", posts_path(@post) %>
