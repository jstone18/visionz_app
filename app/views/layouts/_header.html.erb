<header class="wrapper clearfix">
  <div class="logo">
    <%= link_to 'Visionz', root_path %>
  </div>
    <nav>
      <% if user_signed_in? %>

      <div class="search">
        <%= form_with url: search_path, method: :get, local: true, class: 'form-inline search-form' do |form| %>
        <%= form.text_field :query, value: params[:query], class: 'form-control mr-sm-2', placeholder: '#search' %>
        <% end %>
      </div>


        <%= link_to current_user.name, user_path(current_user) %>
        <%= link_to "Get Inspired", root_path, class: "button" %>
        <%= link_to "Add New Inspiration", new_user_post_path(current_user), class: "button" %>
        <a href="<%= destroy_user_session_path %> "data-method="delete">Sign Out
          <i class="fa fa-user"></i>
        </a>
      <% else %>
        <a href="<%= new_user_session_path%>">Sign In
          <i class="fa fa-sign-in"></i>
        </a>
        <%= link_to "Sign Up", new_user_registration_path, class: "button" %>
      <% end %>
    </nav>
</header>
