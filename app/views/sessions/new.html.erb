<div class="row">
  <h2 class="form_heading">Log in.</h2>
  <div class="col-md-6 col-md-offset-3" id="form">
    <%= form_for(@user) do |f| %>

      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email %>

      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password %>

      <%= f.submit "Log in", class: "btn btn-primary form-label" %>
    <% end %><br>

    <h4 class="or_git">---------- or ----------</h4><br>
    <h4 class="or_git">Log in with your GitHub account</h4>
    <a href="http://localhost:3000/auth/github"><%= image_tag("github_logo2.jpg", :alt => "github-logo", id: "github-logo") %></a><br>
  </div>
</div>
