<!-- Profile info section -->
<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <%= image_tag("avatar_png_71508") %>
      </div>
    </div>
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= current_user.name %></h2>
        <%= link_to "Edit Profile", edit_user_path(current_user), class: "edit-profile button" %>
      </div>
      <ul class="posts">
        <li><span><%= pluralize(@posts.count, "post") %></span></li>
        <li><span>195</span> followers</li>
        <li><span>345</span> following</li>
      </ul>
      <a class="email"><%= current_user.email %></a>
    </div>
  </div>
</div>

<!-- Profile tabs section -->
<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>
  <a class="tab" href="">
    <i class="fa fa-bookmark"></i>
    SAVED
  </a>
  <a class="tab" href="">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>
</div>

<!-- Profile images section -->
<div class="user-images">
  <% @posts.each do |post|%>
    <div class="wrapper">
      <%=image_tag post.image.url %>
    </div>
  <% end %>
</div>
