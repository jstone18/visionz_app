<h1>All users</h1>

<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
          <ul class="all-users">
            <% @users.each do |user| %>
            <li>
              <% if user.avatar.exists? %>
                <%= image_tag user.avatar.url, class: "avatar" %>
              <% else %>
                <%= image_tag "avatar_png_71508", class: "avatar" %>
              <% end %>
              <%= link_to user.username, user %>
            </li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>
