<div class="row">
  <h2 class="form_heading">Sign up for a new account.</h2>
  <div class="col-md-6 col-md-offset-3" id="form">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %><br>

    <h4 class="or_git">---------- or ----------</h4><br>
    <h4 class="or_git">Sign in with your GitHub account</h4>
    <%= image_tag("github_logo2.jpg", :alt => "github-logo", id: "github-logo") %><br>
  </div>
</div>
